@model IEnumerable<VizeÖdevi.Models.Kamyoncu>

@{
    ViewData["Title"] = "Listele";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Listele</h1>

<p>
    <a asp-action="Yeni">Yeni Kayıt</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Soyad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tckimlik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Soyad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tckimlik)
            </td>
            <td>
                @Html.ActionLink("Güncelle", "Guncelle", new {  id=item.Id }) |
                @Html.ActionLink("Detay", "Detay", new {  id=item.Id }) |
                @Html.ActionLink("Sil", "Sil", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
